<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="12dp"
              android:paddingTop="24dp"
              android:paddingRight="12dp">
    <EditText
            android:id="@+id/edit_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:textColor="#333"
            android:textSize="16sp"
            android:textColorHint="#999"
            android:hint="说点什么吧"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight_color"
                android:drawableTop="@drawable/ic_camera"
                android:gravity="center_horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:clickable="true"
                android:onClick="onCameraButtonClicked"
                android:text="相机"
                android:textSize="16sp"
                android:textColor="#666"/>
        <View android:layout_width="2dp"
              android:layout_height="60dp"
              android:background="@color/text_color_weak"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/highlight_color"
                android:drawableTop="@drawable/ic_picture"
                android:gravity="center_horizontal"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:clickable="true"
                android:onClick="onGalleryButtonClicked"
                android:text="相册"
                android:textSize="16sp"
                android:textColor="#666"/>
    </LinearLayout>
    <com.itouxian.android.view.TagGroupView
            android:id="@+id/tag_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="12dp"
            android:contentDescription="@null"/>
</LinearLayout>